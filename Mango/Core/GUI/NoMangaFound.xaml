<Window x:Class="Mango.Core.GUI.NoMangaFound"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NoManga" Height="446" Width="675">
    <Window.Resources>
        <ResourceDictionary>
            <Style x:Key="Oxygen">
                <Setter Property="TextElement.FontFamily" Value="pack://application,,,/Resources/#Oxygen" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Name="Content">
        <Grid>
            <Grid>
                <Label Content="No Manga Found!" Style="{DynamicResource Oxygen}" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold" Margin="0,164,0,0" />
                <Label Content="I couldn't find the manga you wanted...try a different search term" Style="{DynamicResource Oxygen}" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Grid>
            <Image Source="/Mango;component/Resources/Youhavegottobesquiddingme.png" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="180" Margin="258,0,259,-5" />
        </Grid>
    </Grid>
</Window>
